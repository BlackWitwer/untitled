<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <Space
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:id="@+id/space"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Controller"
            android:id="@+id/buttonController" android:singleLine="false" android:onClick="startController"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Game"
            android:id="@+id/buttonGame" android:onClick="startGame"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Game2"
            android:id="@+id/buttonGame2" android:onClick="startGame2"/>
</LinearLayout>